.panel
    min-height 100vh
    max-height 100vh
    overflow hidden
    position relative
    display flex
    flex-direction column

    &:before
        content ""
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index -1


    &[class*="panel--black"]:before
        background-color var(--aux-dark-color)
        opacity 65%

    &[class*="panel--main"]:before
        background-color var(--main-color)

    &[class*="panel--secondary"]:before
        background-color var(--secondary-color)

    &[class*="panel--tertiary"]:before
        background-color var(--tertiary-color)

    .panel__img__background
        display block
        position absolute   
        top 0
        left 0
        min-height 100%
        min-width 100%
        z-index -2
        filter blur(3px)
